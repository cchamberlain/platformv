#!/usr/bin/env bash

export UNIX_NAME="$(uname)"

shopt -s nocasematch

PLATFORM="unknown"
PLATFORMV="unknown"
case "$UNIX_NAME" in
  *darwin*)
    PLATFORM="darwin"
    PLATFORMV="darwin"
    ;;
  *freebsd*)
    PLATFORM="freebsd"
    PLATFORMV="freebsd"
    ;;
  *sunos*)
    PLATFORM="sunos"
    PLATFORMV="sunos"
    ;;
  *linux*|*unix*)
    PLATFORM="linux"
    PLATFORMV="linux"
    ;;
  *windows*)
    PLATFORM="win32"
    PLATFORMV="win32"
    ;;
  *msys*)
    PLATFORM="win32"
    PLATFORMV="msys2"
    ;;
  *mingw*)
    PLATFORM="win32"
    PLATFORMV="mingw"
    ;;
  *cygwin*)
    PLATFORM="win32"
    PLATFORMV="cygwin"
    ;;
esac

export PLATFORM
export PLATFORMV
